---
import BaseLayout from '../layouts/BaseLayout.astro';
import "../styles/global.css";
const allIdeas = Object.values(import.meta.glob('./ideas/*.md', {eager: true}));
const pageTitle = 'Ideas';

---

<BaseLayout pageTitle = {pageTitle}>
  <h2>Ideas I got</h2>
  <p>A list of things I've written.</p>
  <ul>
    {allIdeas.map((post: any) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
  </ul>
</BaseLayout>